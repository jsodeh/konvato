# =============================================================================
# BETSLIP CONVERTER - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
# Choose your LLM provider: 'groq', 'openai', or 'anthropic'
LLM_PROVIDER=groq

# Groq Configuration (if using Groq)
GROQ_API_KEY=groq_api_key_here

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (if using Anthropic) 
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Connection String
MONGODB_URI=mongodb://admin:password@localhost:27017/betslip_converter?authSource=admin

# MongoDB Credentials (for Docker setup)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_DB_NAME=betslip_converter

# Redis Configuration (optional, for session caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Secret for token signing (generate a strong random string)
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# =============================================================================
# BROWSER AUTOMATION CONFIGURATION
# =============================================================================
# URL for the Python automation service (used in production deployments like Render)
AUTOMATION_SERVICE_URL=http://localhost:10000

# Browser Settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_STEALTH=true

# Parallel Processing
USE_PARALLEL_PROCESSING=true
MAX_CONCURRENT_BROWSERS=3
MAX_MEMORY_MB=2048

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# The Odds API (optional, for supplementary odds data)
ODDS_API_KEY=your_odds_api_key_here

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Environment
NODE_ENV=production
ENVIRONMENT=production

# Logging Level
LOG_LEVEL=info

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Server Port
PORT=5000

# Python Path (if not using default)
PYTHON_PATH=python3

# =============================================================================
# SSL/TLS CONFIGURATION (for HTTPS)
# =============================================================================
# SSL Certificate Paths (if using custom certificates)
SSL_CERT_PATH=/path/to/your/certificate.crt
SSL_KEY_PATH=/path/to/your/private.key

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Cache Configuration
CACHE_TTL_HOURS=48
CACHE_MAX_SIZE=1000

# Memory Management
NODE_OPTIONS=--max-old-space-size=2048
