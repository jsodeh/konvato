{
  "name": "betslip-converter-client",
  "version": "1.0.0",
  "description": "Frontend for betslip conversion application",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000",
    "build": "mkdir -p dist && cp -r *.html *.js *.css dist/ 2>/dev/null || true",
    "test": "jest",
    "serve": "live-server --port=3000 --host=0.0.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/test_*.js",
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "keywords": [
    "betslip",
    "converter",
    "betting"
  ],
  "author": "",
  "license": "MIT"
}
